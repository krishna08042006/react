import {createContext,useContext} from "react";

 const ThemeContext=createContext();

export default function App(){
  
  return(
    
    <ThemeContext.Provider value="krishna">
      <Toolbar/>
    </ThemeContext.Provider>
    );
}

function Toolbar(){
  return <Nav/>;
}

function Nav(){
  return <Button/>;
}

function Button(){
  const theme=useContext(ThemeContext);
  
  return(
      <div>
    <h1>{theme} will be great</h1>
    
    <button onClick={()=>{theme=="krishna" ? "dark mode":"light mode"}}>click</button>

      </div> 
    );
}
